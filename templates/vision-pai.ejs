<div class="row">
  <div class="col-12 col-md-5">
    <h1><%= title %></h1>
    <p><%= lead %></p>
    <div class="mt-3">
      <% for (var i =0; i <buttons.length; i++ ) { %>
        <button data-link="<%= buttons[i].link %>" type="button" class="btn mr-1 mb-4 <%= buttons[i].classes %>"><%= buttons[i].label %></button>
      <% } %>
    </div>
  </div>
  <div class="col-12 col-md-7">
    <ul class="list-group ai-options">
      <% for (var i =0; i <options.length; i++ ) { %>
        <li class="list-group-item">
          <div class="ai-option <%= (i == 0) ? "selected" : "" %> col d-flex align-items-center" data-icon="<%= options[i].icon %>">
            <div class="radio pr-1">
              <i class="material-icons md-48 align-middle icon-unchecked">radio_button_unchecked</i>
              <i class="material-icons md-48 align-middle icon-checked">radio_button_checked</i>
            </div>
            <div class="avatar pr-1"><i class="material-icons md-48 align-middle"><%= options[i].icon %></i></div>
            <div class="flex-grow-1">
              <h3><%= options[i].title %></h3>
              <p class=""><%= options[i].label %></p>
            </div>
          </div>
        </li>
      <% } %>
      
    </ul>    
  </div>
</div>